{
    "compilerOptions": {
      "rootDir": "examples",
      "outDir": "compiled",
      "target": "esnext",
      "types": ["lua-types/5.1"],
      "lib": ["esnext"],
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true
    },
    "include": [
        "examples/**/*.ts",
        "../typedefs/**/*.d.ts"
    ],
    "tstl": {
      "luaTarget": "JIT"
    }
}